<div class="container">
<div>
    <form method="post" class="form-group">
        <input type="text" name="text" placeholder="Enter your message" class="form-control mt-2"/>
        <input type="text" name="tag" placeholder="Tag" class="form-control mt-2"/>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <button type="submit" class="btn btn-primary mt-2">Enter</button>
    </form>
</div>
    <div>Список сообщений</div>
    <form method="post" action="filter" class="form-group">
        <input type="text" name="filter" placeholder="Find By Tag" class="form-control mt-2">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <button type="submit" class="btn btn-primary mt-2">Find</button>
    </form>

    <div class="container">
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Text</th>
                <th scope="col">Tag</th>
                <th scope="col">Author</th>
            </tr>
            </thead>
            <tbody>
    {{#messages}}
    <tr>
        <th scope="col">{{id}}</th>
        <th scope="col">{{text}}</th>
        <th scope="col">{{tag}}</th>
        <th scope="col">{{authorName}}</th>
    </tr>
    {{/messages}}
            </tbody>
        </table>
    </div>
</div>

